<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akash.helprapp.helprfragfour">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Few More Details,"
        android:textSize="70px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/moredetails"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Describe The Condition."
        android:layout_below="@+id/moredetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/extradetails" />
    <TextView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:textSize="50px"
        android:textAlignment="center"
        android:paddingLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/extradetails"
        android:id="@+id/stayingornot"
        android:layout_centerHorizontal="true"
        android:text="Can You Stay or Not? :)"
        android:textStyle="bold"/>
    <CheckBox
        android:text="Can Stay."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/staying"
        android:layout_below="@+id/stayingornot"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        />
    <CheckBox
        android:text="Cannot Stay."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notstaying"
        android:layout_below="@+id/stayingornot"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/notstaying"
        android:layout_marginTop="40dp"
        android:src="@drawable/submit"
        android:id="@+id/submithelpr"/>

</RelativeLayout>
