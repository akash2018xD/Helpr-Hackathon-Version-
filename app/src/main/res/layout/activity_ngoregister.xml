<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ngoregister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.helprapp.ngoregister">

    <TextView
        android:text="Enter Your Details,"
        android:textSize="70px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:hint="Your Name"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="Add A Little About Your NGO"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/editText6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editText8" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="Your Address"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />
    <AutoCompleteTextView
        android:hint="Your City"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText9"
        android:layout_centerHorizontal="true"
        android:id="@+id/autoCompleteTextView2" />
    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nextbutton"
        android:layout_marginTop="50dp"
        android:onClick="next"
        android:layout_below="@+id/autoCompleteTextView2"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textor1"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="50px"
        android:layout_below="@+id/next"
        android:layout_marginTop="10dp"
        android:text="OR"/>
    <ImageView
        android:id="@+id/alreadyregister1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textor1"
        android:onClick="ngologin"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
