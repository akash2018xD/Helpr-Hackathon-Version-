<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ngologin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.helprapp.ngologin">
    <TextView
        android:text="Your Login Details,"
        android:textSize="70px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/ngologintext"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Your Mail-id"
        android:layout_below="@+id/ngologintext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/ngomailinfo" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout3"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/ngomailinfo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_centerHorizontal="true"
        app:passwordToggleEnabled="true"
        >
        <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Your Password"
            android:layout_below="@+id/ngomailinfo"
            android:id="@+id/ngopassword" />
    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loginbutton"
        android:layout_below="@+id/inputLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="met"
        android:id="@+id/ngologinimage" />
</RelativeLayout>
